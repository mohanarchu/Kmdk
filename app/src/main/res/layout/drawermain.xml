<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_width="270dp"
        android:layout_height="match_parent">
        <ImageView
            android:background="@color/background"
            android:src="@drawable/ic_splash"
            android:layout_width="match_parent"
            android:layout_height="160dp" />


            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.widget.NestedScrollView
                    android:layout_gravity="fill_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/homePage"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/homepage"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>

                            <TextView
                                android:id="@+id/events"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/events"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>

                            <TextView
                                android:id="@+id/newMem"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="உறுப்பினராக சேர"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>

                            <TextView
                                android:id="@+id/gallary"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/gallery"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>

                            <TextView
                                android:id="@+id/complaintsRegister"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/complaint"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>

                            <TextView
                                android:id="@+id/addComplai"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/complaints"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>

                            <TextView
                                android:id="@+id/downlods"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="பதிவிறக்கம்"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>
                            <TextView
                                android:id="@+id/adminContact"
                                android:gravity="center|left"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/contact_admin"
                                android:textSize="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />

                            <View
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="0.01dp"/>


                            <LinearLayout

                                android:layout_marginTop="15dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/thens"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="5dp"
                                    android:text="@string/then"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View

                                    android:background="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0.1dp"/>

                                <TextView
                                    android:id="@+id/settings"
                                    android:gravity="center|left"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="அமைப்புகள்"
                                    android:textSize="18dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />
                                <View
                                    android:background="@color/grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.01dp"/>

                                <TextView
                                    android:id="@+id/logins"
                                    android:gravity="center|left"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="உள் நுழை"
                                    android:textSize="18dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />

                                <View
                                    android:background="@color/grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.01dp"/>

                                <TextView
                                    android:id="@+id/showWeb"
                                    android:gravity="center|left"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="@string/website"
                                    android:textSize="18dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />

                                <View
                                    android:background="@color/grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.01dp"/>

                                <TextView
                                    android:id="@+id/changeLan"
                                    android:gravity="center|left"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="மொழியை மாற்ற"
                                    android:textSize="18dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp" />

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

            </LinearLayout>







    </LinearLayout>

</android.support.v4.widget.DrawerLayout>