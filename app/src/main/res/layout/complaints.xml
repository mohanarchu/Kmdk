<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:background="@color/background"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                android:textStyle="bold"
                    android:id="@+id/nameCom"
                android:padding="6dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="mohanrah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_smartphone"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView

                        android:padding="6dp"

                        android:layout_marginRight="3dp"
                        android:id="@+id/mobileCom"
                        android:textSize="18dp"
                        android:text="mohanrah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:background="@color/colorPrimaryDark"
                >

            </View>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="6dp"
                    android:text="hahha"
                    android:textStyle="bold"
                    android:id="@+id/typeCom"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:background="@color/colorPrimaryDark"
                    >

                </View>
            </LinearLayout>



            <TextView

                android:padding="6dp"

                android:id="@+id/comCom"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="தெருக்கள் மற்றும் விளக்குகள் மோசமான..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorPrimary"
                >

            </View>




            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/closeCard"

                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="3dp"
                    android:padding="2sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/comImages"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/closeCards"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="3dp"
                    android:padding="2sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">



                         <ImageView

                             android:id="@+id/comVid"
                             android:layout_width="match_parent"
                             android:layout_height="200dp" />
                         <ImageView
                             android:id="@+id/playButton"
                             android:layout_centerInParent="true"
                             android:src="@drawable/ic_play_circle_filled_blue_grey_700_24dp"
                             android:layout_width="50dp"
                             android:layout_height="50dp" />
                     </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:padding="3dp"
                        android:id="@+id/placeCom"
                        android:textSize="15dp"
                        android:text="கோயம்புத்தூர்"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/timeCom"
                        android:layout_marginRight="5dp"
                        android:padding="3dp"
                        android:textSize="15dp"
                        android:text="12.30 PM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"
                />
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>