<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/actNames"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:padding="3dp"
                android:text="actName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <TextView
              android:id="@+id/actCreate"
            android:layout_alignParentRight="true"
             android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:padding="3dp"
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </RelativeLayout>
        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />


        <TextView
            android:id="@+id/actType"
            android:layout_alignParentRight="true"
            android:textStyle="bold"

            android:textSize="16dp"
            android:padding="3dp"
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/actDes"
            android:layout_alignParentRight="true"
            android:textStyle="bold"

            android:textSize="16dp"
            android:padding="3dp"
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/goneLay"


            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/removeCard"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="3dp"
                android:padding="2sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/actImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/removeCards"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="3dp"
                android:padding="2sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <ImageView

                        android:id="@+id/actVideoImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                    <ImageView
                        android:id="@+id/playButtons"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_play_circle_filled_blue_grey_700_24dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:padding="3dp"
                    android:id="@+id/actPlace"
                    android:textSize="15dp"
                    android:text="கோயம்புத்தூர்"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/actTme"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    android:textSize="15dp"
                    android:text="12.30 PM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
    </LinearLayout>








</android.support.v7.widget.CardView>