<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/conHead"
            android:textColor="@color/colorPrimaryDark"
            android:padding="4dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="@string/enquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_gravity="fill_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout


                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <EditText

                                android:textSize="20dp"
                                android:id="@+id/conName"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"

                                android:singleLine="true"
                                android:layout_marginStart="5dp"

                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp">

                        </View>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout


                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <EditText

                                android:textSize="20dp"

                                android:id="@+id/conDistrict"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"

                                android:singleLine="true"
                                android:layout_marginStart="5dp"

                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp">

                        </View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout


                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <EditText

                                android:textSize="20dp"
                                android:id="@+id/conPlace"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"

                                android:singleLine="true"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp">

                        </View>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout


                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <EditText

                                android:textSize="20dp"
                                android:id="@+id/conNumber"
                                android:inputType="number"

                                android:textColor="@color/colorPrimaryDark"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"

                                android:background="@null"
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp">

                        </View>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17dp"
                            android:text="@string/image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <android.support.v7.widget.CardView

                            app:cardCornerRadius="3dp"
                            android:layout_marginLeft="4dp"
                            app:cardBackgroundColor="@color/background"
                            android:layout_margin="10dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                            <ImageView

                                android:layout_gravity="center"
                                android:src="@drawable/ic_camera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <View
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp">
                    </View>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/conDescribe"
                            android:inputType="textMultiLine"
                            android:textSize="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:layout_marginStart="5dp"

                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />


                        <View
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp">

                        </View>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/conSubmit"
                android:layout_marginBottom="15dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/red_normal"
                android:layout_width="180dp"
                android:layout_height="40dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/conSubmitText"
                    android:textColor="@color/white"
                    android:text="@string/submit"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>