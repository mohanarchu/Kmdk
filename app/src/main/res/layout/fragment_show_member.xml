<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context=".Members.viewMem.memView.ShowMember">
    <android.support.v7.widget.Toolbar
        android:theme="@style/ToolBarStyle"
        android:id="@+id/profileTool"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:background="@color/background"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
               android:layout_marginRight="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_call_red_500_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/memberImage"
                android:layout_centerInParent="true"
                android:src="@drawable/images"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </RelativeLayout>

        <LinearLayout
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/memberName"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Mohan kumar"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberDesignation"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Member Coordinator"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberCity"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memBranchNo"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/branch_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:gravity="start"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_weight="1.3"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_weight="1"
                android:id="@+id/memberCommittieText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Committie : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberCommittie"

                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="@string/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/memberEducationText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Education : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberEducation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="@string/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/memberAddressText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="State : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberAddress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_weight="1"
                android:id="@+id/memberStateText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="State : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberState"

                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="@string/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_weight="1"
                android:id="@+id/memberDistrictText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="District : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberDistrict"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="@string/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_weight="1"
                android:id="@+id/memberZoneText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="District : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberZone"

                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="@string/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="6dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="3dp"
                android:layout_height="6dp">
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_weight="1"
                android:id="@+id/memberStatusText"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Status : "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/memberStatus"

                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="@string/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>